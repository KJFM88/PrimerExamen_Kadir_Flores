@page
@model Examen_Kadir_Flores.Pages.Instituciones.GridModel
@{
}
<div class="container-fluid">

    <div class="card">
        <div class="card-header">
            Instituciones
        </div>
        <div class="card-body">          
            <div class="row">
                <div class="col-12">
                    <table id="GridView" class="">
                       <thead>
                           <tr>
                               <th>Id</th>
                               <th>Codigo</th>
                               <th>Nombre</th>
                               <th>Telefono</th>
                               <th>Estado</th>
                               <th>Accion</th>
                           </tr>
                       </thead>
                       <tbody>
                           @foreach(var item in Model.GridLista)
                                 {
                           <tr>
                               <td>@item.Id_Intitucion</td>
                               <td>@item.Codigo</td>
                               <td>@item.Nombre</td>
                               <td>@item.Telefono</td>
                               <td>@item.Estado</td>
                               <td>
                                   <button type="button" class="btn btn-danger" onclick="GridInstitucion.OnclickEliminar(@item.Id_Intitucion)"><i class='bx bxs-trash'></i></button>
                               </td>
                           </tr>
                                 }
                       </tbody>  
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>
@section Scrpits{

    <script>
        var MensajeApp = "@Html.Raw(Model.Mensaje)";
    </script>
    <script defer src="~/App/Instituciones/Grid.js"></script>
 }